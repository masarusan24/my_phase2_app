<%= form_with(model: @micropost, local: true, url: choose_new_or_edit) do |form| %>
  <% if @micropost.errors.any? %>
    <div id="error_explanation">
      <h2><%= @micropost.errors.count %>件のエラーがあります</h2>
      <ul>
        <% @micropost.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="micropost_title">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to 'ツイート一覧へ戻る', root_path %>