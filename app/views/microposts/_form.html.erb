<div class="wrapper clearfix">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @micropost, local: true, url: choose_new_or_edit) do |form| %>
        <% if @micropost.errors.any? %>
          <div id="error_explanation">
            <h2><%= @micropost.errors.count %>件のエラーがあります</h2>
            <ul>
              <% @micropost.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="micropost_title">
          <%= form.label :content, value: "140字まで" %>
          <%= form.text_area :content, class: "form-control", rows: "3" %>
        </div>
        <%= form.submit "投稿する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>