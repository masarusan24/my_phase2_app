<%= render 'header' %>
<div class="wrapper clearfix">
  <% unless notice.blank? %>
    <div class="bg-info"><p><%= notice %></p></div>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>つぶやき一覧</h1>
      <table class="table table-hover table-responsive">
      <% @microposts.each do |micropost| %>
        <tr>
          <td><%= link_to micropost[:content], micropost_path(micropost.id), class: "content" %></td>
          <td><%= link_to '編集画面へ', edit_micropost_path(micropost.id), class: "btn btn-primary" %></td>
          <td><%= link_to '削除する', micropost_path(micropost.id), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-warning" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
<%= render 'footer' %>